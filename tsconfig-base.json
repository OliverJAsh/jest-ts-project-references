{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "./target/",
    "rootDir": "./src/",
    // Clear avoid bringing in all types. Whitelist when extending.
    "types": [],
    "allowSyntheticDefaultImports": true
  }
}
